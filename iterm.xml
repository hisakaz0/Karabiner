<?xml version="1.0"?>
<root>
	<item>
		<name>Terminal(iTerm2)</name>
		<item>
			<name>Swap Command + Space to Control + Space</name>
			<identifier>private.swap.command.tab.to.control.space</identifier>
			<only>iTerm2</only>
			<autogen>
				__KeyToKey__
				KeyCode::SPACE, ModifierFlag::COMMAND_L,
				KeyCode::SPACE, ModifierFlag::CONTROL_L
			</autogen>
			<autogen>
				__KeyToKey__
				KeyCode::SPACE, ModifierFlag::CONTROL_L,
				KeyCode::SPACE, ModifierFlag::COMMAND_L
			</autogen>
		</item>

		<item>
			<name>Swap Command + HHKB Right/Left and Control + HHKB Right/Left</name>
			<identifier>private.swap.command.hhkb.right.left.and.control.hhkb.right.left</identifier>
			<only>iTerm2</only>
			<!-- <autogen>                                                       -->
			<!-- __KeyToKey__                                                    -->
			<!-- KeyCode::QUOTE, ModifierFlag::FN | ModifierFlag::COMMAND_L,     -->
			<!-- KeyCode::QUOTE, ModifierFlag::FN | ModifierFlag::CONTROL_L      -->
			<!-- </autogen>                                                      -->
			<!-- <autogen>                                                       -->
			<!-- __KeyToKey__                                                    -->
			<!-- KeyCode::QUOTE, ModifierFlag::FN | ModifierFlag::CONTROL_L,     -->
			<!-- KeyCode::QUOTE, ModifierFlag::FN | ModifierFlag::COMMAND_L      -->
			<!-- </autogen>                                                      -->
			<!-- <autogen>                                                       -->
			<!-- __KeyToKey__                                                    -->
			<!-- KeyCode::SEMICOLON, ModifierFlag::FN | ModifierFlag::COMMAND_L, -->
			<!-- KeyCode::SEMICOLON, ModifierFlag::FN | ModifierFlag::CONTROL_L  -->
			<!-- </autogen>                                                      -->
			<!-- <autogen>                                                       -->
			<!-- __KeyToKey__                                                    -->
			<!-- KeyCode::SEMICOLON, ModifierFlag::FN | ModifierFlag::CONTROL_L, -->
			<!-- KeyCode::SEMICOLON, ModifierFlag::FN | ModifierFlag::COMMAND_L  -->
			<!-- </autogen>                                                      -->
			<autogen>
			__KeyToKey__
			KeyCode::CURSOR_RIGHT, ModifierFlag::COMMAND_L,
			KeyCode::CURSOR_RIGHT, ModifierFlag::CONTROL_L
			</autogen>
			<autogen>
			__KeyToKey__
			KeyCode::CURSOR_RIGHT, ModifierFlag::CONTROL_L,
			KeyCode::CURSOR_RIGHT, ModifierFlag::COMMAND_L
			</autogen>
			<autogen>
			__KeyToKey__
			KeyCode::CURSOR_LEFT, ModifierFlag::COMMAND_L,
			KeyCode::CURSOR_LEFT, ModifierFlag::CONTROL_L
			</autogen>
			<autogen>
			__KeyToKey__
			KeyCode::CURSOR_LEFT, ModifierFlag::CONTROL_L,
			KeyCode::CURSOR_LEFT, ModifierFlag::COMMAND_L
			</autogen>
		</item>

		<item>
			<name>Swap Opt + Command + 8 and Opt + Control + 8</name>
			<identifier>private.swap.opt.command.8.and..opt.control.8</identifier>
			<only>iTerm2</only>
			<autogen>
				__KeyToKey__
				KeyCode::KEY_8, ModifierFlag::COMMAND_L | ModifierFlag::OPTION_L,
				KeyCode::KEY_8, ModifierFlag::CONTROL_L | ModifierFlag::OPTION_L
			</autogen>
			<autogen>
				__KeyToKey__
				KeyCode::KEY_8, ModifierFlag::CONTROL_L | ModifierFlag::OPTION_L,
				KeyCode::KEY_8, ModifierFlag::COMMAND_L | ModifierFlag::OPTION_L
			</autogen>
		</item>

	</item>
</root>
